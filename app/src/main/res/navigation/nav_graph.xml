<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/locationFragment">

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.labiot.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" >
        <action
            android:id="@+id/action_locationFragment_to_pronosticosFragment"
            app:destination="@id/pronosticosFragment" />
        <action
            android:id="@+id/action_locationFragment_to_deportesFragment"
            app:destination="@id/deportesFragment" />
    </fragment>
    <fragment
        android:id="@+id/pronosticosFragment"
        android:name="com.example.labiot.PronosticosFragment"
        android:label="fragment_pronosticos"
        tools:layout="@layout/fragment_pronosticos" >
        <action
            android:id="@+id/action_pronosticosFragment_to_deportesFragment"
            app:destination="@id/deportesFragment" />
        <action
            android:id="@+id/action_pronosticosFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>
    <fragment
        android:id="@+id/deportesFragment"
        android:name="com.example.labiot.DeportesFragment"
        android:label="fragment_deportes"
        tools:layout="@layout/fragment_deportes" >
        <action
            android:id="@+id/action_deportesFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/action_deportesFragment_to_pronosticosFragment"
            app:destination="@id/pronosticosFragment" />
    </fragment>
</navigation>